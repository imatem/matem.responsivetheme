<?xml version="1.0"?>

<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="IM Responsive Theme">

 <object name="matem_responsivetheme_styles"
    meta_type="Filesystem Directory View"
    directory="matem.responsivetheme:skins/matem_responsivetheme_styles" />
 <object name="matem_responsivetheme_images"
    meta_type="Filesystem Directory View"
    directory="matem.responsivetheme:skins/matem_responsivetheme_images" />

  <object name="matem_responsivetheme_contact_info"
    meta_type="Filesystem Directory View"
    directory="matem.responsivetheme:skins/matem_responsivetheme_contact_info" />

 <skin-path name="IM Responsive Theme" based-on="Sunburst Theme">
  <layer name="matem_responsivetheme_styles"
     insert-after="custom"/>
  <layer name="matem_responsivetheme_images"
     insert-after="matem_responsivetheme_styles"/>
  <layer name="matem_responsivetheme_contact_info"
    insert-after="matem_responsivetheme_images"/>
 </skin-path>

</object>
