<div metal:define-macro="portal_logo"
     tal:attributes="class string:cell width-3:4 position-0" id="logo"
     tal:define="isHomePg context/@@plone/isPortalOrPortalDefaultPage;"> 

    <div id="home-portal-logo" tal:condition="python: isHomePg">
        <a id="portal-logo" href="/">
            <img src="/infomatem/logomatemP.png" align="left" alt="Instituto de Matemáticas" />
        </a>
        <a id="portal-logo-unam" href="http://www.unam.mx">
            <img src="/infomatem/logounamP.png" align="right" alt="UNAM" />
        </a>
    </div>

    <div tal:condition="not: isHomePg">
      <a id="portal-logo" href="/">
          <img src="/infomatem/logomatemI.png" align="left" alt="Instituto de Matemáticas" />
      </a>
      <a id="portal-logo-unam" href="http://www.unam.mx">
          <img src="/infomatem/logounamI.png" align="right" alt="UNAM" />
      </a>
    </div>

</div>
