<tal:block tal:define="isHomePg context/@@plone/isPortalOrPortalDefaultPage;">

  <tal:block tal:condition="not: isHomePg">

    <div metal:define-macro="portal_logo"
         tal:attributes="class string:cell width-1:4 position-0" id="logo"
         tal:define="isHomePg context/@@plone/isPortalOrPortalDefaultPage;">


      <a id="-----" href="/">
            <img src="-----" align="left" alt="Instituto de Matemáticas" />
      </a>
    <br/>
    </div>

      <div id="-----">
        <a id="-----" href="http://www.unam.mx">
            <img src="-----" align="right" alt="UNAM" />
        </a>
      </div>
  </tal:block>


  <tal:block tal:condition="isHomePg" tal:define="headers context/@@sliderheader/getHeaders">

    <style>
    * {box-sizing: border-box;}
    body {font-family: Verdana, sans-serif;}

    img {vertical-align: middle;}


    /* On hover, add a black background color with a little bit see-through */
    .prev:hover, .next:hover {
      background-color: rgba(0,0,0,0.8);
    }

    /* Caption text */
    .text {
      color: #f2f2f2;
      font-size: 15px;
      padding: 8px 12px;
      position: absolute;
      bottom: 8px;
      width: 100%;
      text-align: center;
    }

    /* Number text (1/3 etc) */
    .numbertext {
      color: #f2f2f2;
      font-size: 12px;
      padding: 8px 12px;
      position: absolute;
      top: 0;
    }

    .active {
      background-color: #717171;
    }


    /* On smaller screens, decrease text size */
    @media only screen and (max-width: 300px) {
      .text {font-size: 11px}
    }

    </style>

    <div class="-----" >

      <tal:block tal:condition="not: headers">

        <div tal:attributes="class string:cell width-1:4 position-0" id="logo"
             tal:define="isHomePg context/@@plone/isPortalOrPortalDefaultPage;">
          <a id="-----" href="/">
            <img src="-----" align="left" alt="Instituto de Matemáticas" />
          </a>
        <br/>
        </div>

        <div id="-----">
          <a id="-----" href="http://www.unam.mx">
            <img src="-----" align="right" alt="UNAM" />
          </a>
        </div>
      </tal:block><!-- end not headers -->

      <tal:block tal:condition="headers">
        <div class="-----">
          <a style="padding-right: 10px;" href="http://www.unam.mx">
              <img src="-----" alt="UNAM" />
          </a>

          <a href="/">
            <img class="-----" src="-----" alt="Instituto de Matemáticas" />
          </a>
        </div>
      </tal:block>

      <tal:block tal:repeat="header headers">
        <div class="----- -----">
          <a tal:attributes="href header/url">
            <img tal:attributes="src header/urlimage" style="width:100%"/>
          </a>
        </div>
      </tal:block>

      <div style="left: 5%;bottom:2%; position: absolute;">
        <tal:block tal:repeat="x python:range(1, len(headers)+1)">
          <span class="-----" tal:attributes="onclick string: currentSlide(${x})" style="cursor: pointer;"></span>
        </tal:block>
      </div>

    </div>

  </tal:block>
</tal:block>

